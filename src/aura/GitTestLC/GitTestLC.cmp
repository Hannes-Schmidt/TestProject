    <div>
       	<lightning:card class="container">
            <aura:set attribute="title">
                <lightning:badge label="GitTest"/>
            </aura:set>
            <lightning:layout multipleRows="true">
                <lightning:layoutItem size="3" padding="horizontal-small">
                    <lightning:input type="number" label="X" name="x" value="{!v.xNumber}" />
                </lightning:layoutItem>
                <lightning:layoutItem size="3" padding="horizontal-small">
                    <lightning:input type="number" label="Y" name="y" value="{!v.yNumber}" />
                </lightning:layoutItem>
                <lightning:layoutItem size="6" padding="horizontal-small">
                </lightning:layoutItem>
                <lightning:layoutItem size="3" padding="horizontal-small">
                    <lightning:button label="Calculate X + Y" onclick="{!c.onCalculateButtonClick}"/>
                </lightning:layoutItem>
            </lightning:layout>
        </lightning:card>
    </div>
   
    
</aura:component>