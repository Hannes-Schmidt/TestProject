    <!-- 
      attributes - privates
    -->
    <aura:attribute name="xNumber" type="Integer" description="" access="private"/>
    <aura:attribute name="yNumber" type="Integer" description="" access="private"/>
 
    
    
    <!-- 
      event handler 
    -->
    

    
    <!--      -->
    <!-- body -->
