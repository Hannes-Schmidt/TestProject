<aura:component implements="force:appHostable" controller="WeisswurstShoppingListController">
    <aura:handler name="init" value="{!this}" action="{!c.onInit}" />
    <aura:attribute name="WWEvent" type="Weisswurst_Event__c"/>
    
    <aura:attribute name="weisswurstCB" type="Boolean" default="false"/>
    <ui:inputCheckbox value="{!v.weisswurstCB}" label="Weisswurst" click="{!c.myAction}"/>
    
    <aura:attribute name="weissbierCB" type="Boolean" default="false"/>
    <ui:inputCheckbox value="{!v.weissbierCB}" label="Weissbier" click="{!c.myAction}"/>
    
    <aura:attribute name="breznCB" type="Boolean" default="false"/>
    <ui:inputCheckbox value="{!v.breznCB}" label="Brezn" click="{!c.myAction}"/>
    
    <aura:attribute name="senfCB" type="Boolean" default="false"/>
    <ui:inputCheckbox value="{!v.senfCB}" label="Senf" click="{!c.myAction}"/>
</aura:component>